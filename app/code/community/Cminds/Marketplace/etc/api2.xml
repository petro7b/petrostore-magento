<?xml version="1.0"?>
<config>
    <api2>
        <resource_groups>
            <cminds_marketplace translate="title" module="Cminds_Marketplace">
                <title>Marketplace</title>
                <sort_order>10</sort_order>
            </cminds_marketplace>
        </resource_groups>
        <resources>
            <getSuppliersByCategory translate="title" module="Cminds_Marketplace">
                <group>cminds_marketplace</group>
                <model>marketplace/api2_supplierByCategory</model>
                <title>List of all Suppliers Per Provided Category</title>
                <sort_order>10</sort_order>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                    <guest>
                        <retrieve>1</retrieve>
                    </guest>
                </privileges>
                <routes>
                    <route_collection>
                        <route>/suppliers/:id</route>
                        <action_type>collection</action_type>
                    </route_collection>
                </routes>
                <versions>1</versions>
            </getSuppliersByCategory>
            <getSupplierInfo translate="title" module="Cminds_Marketplace">
                <group>cminds_marketplace</group>
                <model>cminds_marketplace/api2_supplier</model>
                <title>Supplier Data</title>
                <sort_order>20</sort_order>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                    <guest>
                        <retrieve>1</retrieve>
                    </guest>
                </privileges>
                <routes>
                    <route_collection>
                        <route>/supplier/:id</route>
                        <action_type>entity</action_type>
                    </route_collection>
                </routes>
                <versions>1</versions>
            </getSupplierInfo>
            <listAllProducts translate="title" module="Cminds_Marketplace">
                <group>cminds_marketplace</group>
                <model>marketplace/api2_supplierProducts</model>
                <title>List All Supplier Products</title>
                <sort_order>30</sort_order>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                    <guest>
                        <retrieve>1</retrieve>
                    </guest>
                </privileges>
                <routes>
                    <route_collection>
                        <route>/supplierProducts/:id</route>
                        <action_type>collection</action_type>
                    </route_collection>
                </routes>
                <versions>1</versions>
            </listAllProducts>
            <viewProductDetails translate="title" module="Cminds_Marketplace">
                <group>cminds_marketplace</group>
                <model>marketplace/api2_supplierProduct</model>
                <title>View Product Details</title>
                <sort_order>30</sort_order>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                    <guest>
                        <retrieve>1</retrieve>
                    </guest>
                </privileges>
                <routes>
                    <route_collection>
                        <route>/supplierProduct/:id</route>
                        <action_type>collection</action_type>
                    </route_collection>
                </routes>
                <versions>1</versions>
            </viewProductDetails>
            <searchStore translate="title" module="Cminds_Marketplace">
                <group>cminds_marketplace</group>
                <model>marketplace/api2_searchStore</model>
                <title>Search Store</title>
                <sort_order>30</sort_order>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                    <guest>
                        <retrieve>1</retrieve>
                    </guest>
                </privileges>
                <routes>
                    <route_collection>
                        <route>/searchStore/:id/:category_id</route>
                        <action_type>collection</action_type>
                    </route_collection>
                </routes>
                <versions>1</versions>
            </searchStore>
        </resources>
    </api2>
</config>